<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ColorPicker?>
<StackPane  onMouseDragged="#handleMouseDrag" onMouseMoved="#handleMouseMovement" onMousePressed="#handleMouseClick" onScroll="#handleScroll" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <ImageView fx:id="mainimgview" />
    <BorderPane fx:id="mainPane">
        <top>
            <HBox >
                    <Button fx:id="openfilebtn" onAction="#handleOpenfilebtn" text="Open File" />
                    <ColorPicker fx:id="colorPicker" onAction="#handleColorPicker" />
                    <Button fx:id="exitbtn" alignment="CENTER_RIGHT" onAction="#handleExitbtn" text="Exit" />
                <padding>
                    <Insets left="5" right="5" top="5" />
                </padding>
            </HBox>
        </top>
        <center>
            <GridPane>

            </GridPane>
        </center>
        <left>
            <VBox>
                <StackPane>
                    <ImageView fx:id="smallimgview" />
                    <Rectangle fx:id="rectangle" height="72" width="128" />
                </StackPane>
                <HBox>
                    <Slider fx:id="zoomslider" max="28" min="1" onMouseDragged="#handleSlider" orientation="VERTICAL" showTickLabels="true" showTickMarks="true" />
                    <Text fx:id="coordinates" />
                </HBox>
            </VBox>
        </left>
    </BorderPane>

</StackPane>
